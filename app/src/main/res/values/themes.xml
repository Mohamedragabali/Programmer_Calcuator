<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DeveloperCalculater" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand</item>
        <item name="colorPrimaryVariant">@color/brand</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CalculaterButton">
        <item name="android:textSize">@dimen/textButtonSize</item>
    </style>

    <style name="CalculaterButton.Number">
        <item name="android:background">@drawable/circle_button_white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CalculaterButton.Char">
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalculaterButton.ResultButton">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
</resources>